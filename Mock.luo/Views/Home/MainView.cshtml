@{
    Layout = "~/Views/Shared/_Index.cshtml";
    ViewBag.Title = "首页";
}


<div id="btn" class="button">
    <span>首页</span>
</div>


@section css{
    <style>
        .button { height: 30px; line-height: 30px; width: 88px; text-align: center; border-radius: 5px; background-color: #0F6099; color: white; }
        .button:hover { background-color: orange; cursor: pointer; }
    </style>

}

@section scripts{
    <script>
        $('#btn').click(function () {
            window.open("/App/Index", "_blank");
        })
    </script>

}